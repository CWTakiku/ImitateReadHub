<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<com.cwl.imitatereadhub.ui.wight.TitleBarLayout
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="44dp"/>

<com.cwl.imitatereadhub.ui.wight.ScrollViewPager
    android:id="@+id/view_pager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/b6"></View>
<RadioGroup
    android:id="@+id/rg_tab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/b7"
    android:orientation="horizontal">
    <RadioButton
        android:id="@+id/rb_tab_topic"
        style="@style/tab_radio_button_style"
        android:drawableTop="@drawable/selector_topic"
        android:text="@string/tab_hot"/>

    <RadioButton
        android:id="@+id/rb_tab_news"
        style="@style/tab_radio_button_style"
        android:drawableTop="@drawable/selector_news"
        android:text="@string/tab_info"/>

    <RadioButton
        android:id="@+id/rb_tab_mine"
        style="@style/tab_radio_button_style"
        android:drawableTop="@drawable/selector_mine"
        android:text="@string/tab_mine"/>
   </RadioGroup>


</LinearLayout>